<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactUs">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/email_tag"
                android:textSize="12pt"
                android:textColor="@color/colorBackgroundBottomNavigation"
                android:textStyle="bold"
                android:drawableStart="@drawable/email"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="4pt"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="16pt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="info@buildingdrawings.com"
                android:id="@+id/emailItself"
                android:layout_below="@+id/email_tag"
                android:textSize="10pt"
                android:layout_marginStart="20pt"
                android:layout_marginTop="2pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:background="#f2f2f2"
                android:id="@+id/space2"
                android:layout_below="@+id/emailItself"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="4pt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:id="@+id/address_tag"
                android:layout_below="@id/space2"
                android:textSize="12pt"
                android:textColor="@color/colorBackgroundBottomNavigation"
                android:textStyle="bold"
                android:drawableStart="@drawable/address"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="4pt"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="4pt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cui_park_road_islamabad"
                android:id="@+id/addressItself"
                android:layout_below="@+id/address_tag"
                android:textSize="10pt"
                android:layout_marginStart="20pt"
                android:layout_marginTop="2pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:background="#f2f2f2"
                android:id="@+id/space3"
                android:layout_below="@+id/addressItself"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="4pt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:id="@+id/phone_tag"
                android:layout_below="@id/space3"
                android:textSize="12pt"
                android:textColor="@color/colorBackgroundBottomNavigation"
                android:textStyle="bold"
                android:drawableStart="@drawable/phone"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="4pt"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="4pt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_92_335_5930911"
                android:id="@+id/phoneItself"
                android:layout_below="@+id/phone_tag"
                android:textSize="10pt"
                android:layout_marginStart="20pt"
                android:layout_marginTop="2pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:background="#f2f2f2"
                android:id="@+id/space4"
                android:layout_below="@+id/phoneItself"
                android:layout_marginHorizontal="4pt"
                android:layout_marginTop="4pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space4"
                android:layout_marginHorizontal="4pt"
                android:layout_marginVertical="16pt"
                android:background="#cccccc">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1pt"
                    android:background="#fff">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/message_us_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15pt"
                        android:layout_marginTop="4pt"
                        android:gravity="center_vertical"
                        android:text="@string/message_us"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CU_name_Layout"
                        android:layout_below="@+id/message_us_label"
                        android:layout_marginHorizontal="15pt"
                        android:layout_marginTop="4pt"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:boxCornerRadiusBottomEnd="0pt"
                        app:boxCornerRadiusBottomStart="0pt"
                        app:boxCornerRadiusTopEnd="0pt"
                        app:boxCornerRadiusTopStart="0pt">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/CU_name_field"
                            android:hint="@string/your_name"
                            android:inputType="text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CU_email_Layout"
                        android:layout_below="@+id/CU_name_Layout"
                        android:layout_marginHorizontal="15pt"
                        android:layout_marginTop="4pt"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:boxCornerRadiusBottomEnd="0pt"
                        app:boxCornerRadiusBottomStart="0pt"
                        app:boxCornerRadiusTopEnd="0pt"
                        app:boxCornerRadiusTopStart="0pt">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/CU_email_field"
                            android:hint="@string/your_email"
                            android:inputType="text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CU_subject_Layout"
                        android:layout_below="@+id/CU_email_Layout"
                        android:layout_marginHorizontal="15pt"
                        android:layout_marginTop="4pt"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:boxCornerRadiusBottomEnd="0pt"
                        app:boxCornerRadiusBottomStart="0pt"
                        app:boxCornerRadiusTopEnd="0pt"
                        app:boxCornerRadiusTopStart="0pt">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/CU_subject_field"
                            android:hint="@string/subject"
                            android:text=" "
                            android:inputType="text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CU_message_Layout"
                        android:layout_below="@+id/CU_subject_Layout"
                        android:layout_marginHorizontal="15pt"
                        android:layout_marginTop="4pt"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        app:boxCornerRadiusBottomEnd="0pt"
                        app:boxCornerRadiusBottomStart="0pt"
                        app:boxCornerRadiusTopEnd="0pt"
                        app:boxCornerRadiusTopStart="0pt">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/CU_message_field"
                            android:text="\n\n"
                            android:hint="@string/message"
                            android:inputType="textMultiLine"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/send_message_btn"
                        android:text="@string/send"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:inputType="text"
                        android:background="@color/colorPrimaryDark"
                        android:layout_below="@+id/CU_message_Layout"
                        android:layout_marginHorizontal="15pt"
                        android:layout_marginTop="4pt"
                        android:layout_marginBottom="8pt"
                        android:paddingHorizontal="4pt"
                        android:paddingVertical="4pt" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>