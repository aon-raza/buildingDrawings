<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".estimation">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout1"
                android:orientation="horizontal"
                android:layout_marginVertical="8pt"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="8pt"
                    android:layout_marginRight="4pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageBricks"
                        android:src="@drawable/bricks"
                        android:scaleType="centerCrop" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bricksEstimate"
                        android:text="@string/bricks_estimate"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="4pt"
                    android:layout_marginRight="8pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagePaint"
                        android:src="@drawable/paint"
                        android:scaleType="centerCrop"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/paintEstimate"
                        android:text="@string/paint_estimate"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout2"
                android:layout_below="@+id/linear_layout1"
                android:orientation="horizontal"
                android:layout_marginBottom="8pt"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="8pt"
                    android:layout_marginRight="4pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageLanter"
                        android:src="@drawable/lanter"
                        android:scaleType="centerCrop" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lanterEstimate"
                        android:text="@string/lanter_estimate"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="4pt"
                    android:layout_marginRight="8pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageBeam"
                        android:src="@drawable/beam"
                        android:scaleType="centerCrop"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/beamEstimate"
                        android:text="@string/beam_estimate"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout3"
                android:layout_below="@+id/linear_layout2"
                android:orientation="horizontal"
                android:layout_marginBottom="8pt"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="8pt"
                    android:layout_marginRight="4pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagefloorTiles"
                        android:src="@drawable/floor_tiles"
                        android:scaleType="centerCrop" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/floorTilesEstimate"
                        android:text="@string/floor_tiles"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="4pt"
                    android:layout_marginRight="8pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageWallTiles"
                        android:src="@drawable/wall_tiles"
                        android:scaleType="centerCrop"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/wallTilesEstimate"
                        android:text="@string/wall_tiles"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout4"
                android:layout_below="@+id/linear_layout3"
                android:orientation="horizontal"
                android:layout_marginBottom="8pt"
                android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="8pt"
                    android:layout_marginRight="4pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagePlasterCeiling"
                        android:src="@drawable/plaster_ceiling"
                        android:scaleType="centerCrop" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/plasterCeilingEstimate"
                        android:text="@string/plaster_ceiling"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0pt"
                    android:layout_height="60pt"
                    android:layout_weight="1"
                    app:cardCornerRadius="3pt"
                    app:cardMaxElevation="1pt"
                    app:cardElevation="0.5pt"
                    android:layout_marginLeft="4pt"
                    android:layout_marginRight="8pt">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagePlasterWall"
                        android:src="@drawable/plaster_wall"
                        android:scaleType="centerCrop"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/plasterWallEstimate"
                        android:text="@string/plaster_wall"
                        android:textColor="#ffffff"
                        android:background="#80000000"
                        android:gravity="center"
                        android:textSize="10pt"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/bottom_nav_icon_color_selector"
        app:menu="@menu/bottom_navigation_menu"
        app:theme="@style/BottomNavigationTheme"
        app:itemBackground="@color/colorBackgroundBottomNavigation"
        android:backgroundTint="@color/colorBackgroundBottomNavigation"/>

</RelativeLayout>