<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboveRL">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32pt"
            android:layout_height="32pt"
            android:id="@+id/vendor_photo"
            android:scaleType="centerCrop"
            android:layout_marginEnd="4pt"
            app:civ_circle_background_color="#f2f2f2"
            android:src="@drawable/profile_picture"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_vendor"
            android:id="@+id/vendor_name"
            android:textSize="11pt"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/vendor_photo"
            android:layout_marginTop="2pt"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vendor_category"
            android:id="@+id/vendor_category"
            android:gravity="center_vertical"
            android:textSize="9pt"
            android:layout_toRightOf="@+id/vendor_photo"
            android:layout_below="@+id/vendor_name"
            android:layout_marginTop="1pt"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialer_icon"
            android:src="@drawable/dialer"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2pt"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.75pt"
        android:background="#e2e2e2"
        android:id="@+id/seprator"
        android:layout_below="@+id/aboveRL"
        android:layout_marginBottom="2pt"
        android:layout_marginTop="4pt"/>

</RelativeLayout>